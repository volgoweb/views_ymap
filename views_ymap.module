      'path' => $tpl_path,
      'theme path' => $tpl_path,
      'theme paths' => array($tpl_path),
    ),

    'vy_cities_links' => array(
      'arguments' => array(
        'links'   => NULL, 
      ),
      'template' => 'cities_links',
      // 'original hook' => 'block',
      'path' => $tpl_path,
